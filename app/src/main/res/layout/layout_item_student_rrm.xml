<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgrr"
                android:layout_marginTop="5dp"
                android:layout_width="141dp"
                android:layout_height="124dp"
                app:srcCompat="@drawable/ic_person" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNamerr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:textColor="#12ffff"
            android:text="Tên" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbMsvrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sinh viên: "
                android:textColor="#ED9478"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvIdStdrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Mã sinh viên "
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbclassrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ED9478"
                android:text="Lớp:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvclassrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Lớp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbphonerr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ED9478"
                android:text="Số điện thoại:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvphonerr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Số điện thoại"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>