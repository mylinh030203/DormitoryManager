<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="146dp"
                android:layout_height="117dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/phong" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Tên"
            android:textColor="#12ffff"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Giường: "
                android:textColor="#ED9478"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvbeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="số giường "
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ED9478"
                android:text="Vị Trí:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Vị trí"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
            android:id="@+id/lbphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ED9478"
            android:text="Số thành viên:"
            android:textSize="15dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Số thành viên"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>